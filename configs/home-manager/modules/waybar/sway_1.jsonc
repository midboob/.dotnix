{
  "name": "sway",

  "layer": "top",
  "position": "top",
  "height": 28,
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "ipc": true,

  "modules-left": [
    "sway/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "tray",
    "custom/spacer",
    "backlight",
    "custom/spacer",
    "battery",
    "custom/spacer",
    "pulseaudio",
    "custom/spacer",
    "custom/notification"
  ],

  "custom/spacer": {
    "tooltip": false,
    "format": "|"
  },

  "pulseaudio": {
    "format": "<b>{volume}%</b> {icon} ",
    "format-muted": " 󰝟 ",
    "format-bluetooth": "<b>{volume}%</b> {icon} ",
    "format-bluetooth-muted": "󰝟 ",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "󰕿",
        "󰖀",
        "󰕾"
      ]
    }
  },

  "backlight": {
    "format": "{icon} <b>{percent}%</b>",
    "format-icons": [
      "󰃞",
      "󰃟",
      "󰃠"
    ],
    "tooltip": false
  },

  "tray": {
    "icon-size": 15,
    "spacing": 5
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "max-length": 25,
    "tooltip": true,
    "interval": 5,
    "states": {
      "good": 70,
      "warning": 30,
      "critical": 1
    }
  },

  "sway/workspaces": {
    "all-outputs": true,
    "format": "{name}",
    "on-scroll-up": "swaymsg workspace next",
    "on-scroll-down": "swaymsg workspace prev"
  },

  "clock": {
    "interval": 60,
    "format": "{:%m/%d %I:%M}",
    "tooltip": false
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{} {icon} ",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
